<% layout('boilerplate') %>

    <h1 class="pb-2">
        <%= task.title %>
    </h1>
    <div class="list-group-item d-flex justify-content-between align-items-start list-group-item-action">
        <h5>
            <%= task.description || '' %>
        </h5>
        <p class="text-muted">
            <span class="lead">Complete Before:</span>
            <%= task.dueDate %><br>
                <span class="lead">Created On:</span>
                <%= task.createdOn %>
        </p>
    </div>

    <div class="btn-group" role="group">
        <a href="/tasks/<%=task._id%>/edit" class="btn btn-outline-info">Edit</a>
        <form action="/tasks/<%=task._id%>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger">Delete</button>
        </form>
        <a href="/tasks" class="btn btn-outline-secondary" id="back">Back</a>
    </div>
    <style>
        div:nth-of-type(1) {
            margin-top: 2em;
            margin-bottom: 2em;
        }

        button,
        #back {
            margin-left: .2em;
        }
    </style>