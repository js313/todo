<% layout('boilerplate') %>

    <h1 class="pb-4">Edit Task</h1>
    <form action="/tasks/<%=task._id%>?_method=PATCH" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title *</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Task name"
                value="<%=task.title%>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description"
                placeholder="Describe the task"><%=task.description || ''%></textarea>
        </div>
        <div class="mb-3">
            <label for="due-date" class="form-label">Finish By *</label>
            <input type="datetime-local" class="form-control" name="dueDate" id="due-date"
                value="<%=task.dueDate.toISOString().slice(0,16)%>" required>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <span class="ps-3"><a href="/tasks" class="btn btn-outline-secondary">Back</a></span>
    </form>

